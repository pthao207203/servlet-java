package crm.service;

import java.util.List;

import crm.model.Student;
import crm.model.Teacher;
import crm.repository.StudentRepository;
import crm.repository.TeacherRepository;

public class TeacherService {
	private TeacherRepository teacherRepository = new TeacherRepository();
	public List<Teacher> checkLogin(String mssv, String password) {
		List<Teacher>  teacher = teacherRepository.getTeacher();
		return teacher;
	}
	public List<Teacher> getAllTeacher(){
		return teacherRepository.getTeacher();
	}
	public boolean deleteById(int id) {
		return teacherRepository.deleteTeacherById(id) > 0 ? true : false;
	}
	public boolean addTeacher(Teacher teacher) {
		return teacherRepository.addTeacher(teacher) > 0 ? true : false;
	}
}
